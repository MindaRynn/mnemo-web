<% if user_signed_in? %>
  <div class="navbar-container">
    <nav class="navbar">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/users/sign_in">New Feed</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/users/sign_up">Pinned</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/users/sign_up">Notification</a>
        </li>
      </ul>
      <div class="navbar-brand">Logo</div>
      <div class="dropdown-container">
        <div class="dropdown">
          <div class="avatar-container" data-toggle="dropdown">
            <span> <%= current_user.name %> |</span>
            <%=image_tag(current_user.image)%>
          </div>
          <ul class="dropdown-menu dropdown-menu-right">
            <li><a href="#"><%= current_user.name %></a></li>
            <li class="hidden-list"><a href="#">New Feed</a></li>
            <li class="hidden-list"><a href="#">Pinned</a></li>
            <li class="hidden-list"><a href="#">Notification</a></li>
            <li><a href="#">Setting</a></li>
            <li><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
          </ul>
        </div>

      </div>
    </nav>
  </div>
<% else %>
  <div class="navbar-container">
    <nav class="navbar">
      <div class="navbar-brand">Logo</div>
      <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/users/sign_in">Sign in</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/sign_up">Sign up</a>
          </li>
        </ul>
    </nav>
  </div>
<% end %>
